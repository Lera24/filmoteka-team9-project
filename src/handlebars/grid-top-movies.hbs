{{#each this}}
    <li class="gallery__item">
        <div class="gallery__image-wrapper">
            <img src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="movie poster" width="300" height="400">
            <p class="gallery__info-name">{{original_title}}</p>
            <span class="gallery__info-rating hidden_markup">{{vote_average}}</span>
        </div>
    </li>
{{/each}}